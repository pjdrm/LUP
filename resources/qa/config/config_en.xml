<?xml version="1.0" encoding="UTF-8"?>
<config language="en">
	<interpretation>
		<classification>
		
			<!-- Mode which application should execute (develop, deploy, cross validation, re-cross-validate, test, out of domain)-->
			<mode>cross validation</mode>
			
			<maxPredictions>1</maxPredictions>
			
			<!-- Parameters for the classifier creation -->
			<!-- Type of classifier framesAF, framesFF, clm, svm, jotfidf, jaccardOverlap, jaccard, dice, overlap, crossEntropy, logisticRegression, lsa, importantWords, vsm -->
			<NLUTechniques>dice</NLUTechniques>
			
			<NLUTechniquesForFrames>dice</NLUTechniquesForFrames>
			
			<!-- Check usage-->
			<!-- ficheiro de stopwords PT -->
			<stopwordsFlags>true</stopwordsFlags>
			<stopwordsFile>resources/qa/stop words/stopwordsPato.txt</stopwordsFile>
			
			<!-- Low caps, ponctuation removal and dictation marks removal -->
			<normalizeStringFlags>true</normalizeStringFlags>
			
			<!-- Use of POS processing -->
			<posTaggerFlags>false</posTaggerFlags>
			<POSTaggerConfig>resources/qa/config/config_taggercorpus.xml</POSTaggerConfig>
			
			<!-- Parameters for the out of domain utterance spoter -->
			<!-- WorstWorst, WorstBest, FixedThreshold, Average, AverageGeneral, CLM -->
			<OODTechniques>WorstBest, WorstWorst</OODTechniques>
			
			<!-- Test corpus percentage -->
			<testPercentage>0.2</testPercentage>
			
			<garbageCorpus>false</garbageCorpus>
			<nPartitions>5</nPartitions>
			<reCrossValidateDir>emailFullMH101_23-Jan-13</reCrossValidateDir>
			
			<!-- TAlphha value of t-test -->
			<alpha>0.005</alpha>
						
			<!-- ######################################### -->
			
			<!-- Directory structure of application -->
			<!-- Directory to where the serialized classifier (from deploy mode) goes to -->
			<serFile>resources/qa/defaultQCE/qce.data</serFile>
						
			<systemResultsDir>resources/qa/systemResults</systemResultsDir>
			<usersTestPath>resources/qa/tests/newPalaceASR/edgarASRCorpus.xml</usersTestPath>
			<oodTestDirPath>resources/qa/tests/ASR</oodTestDirPath>
			
			<!-- Base directory for the corpus files -->
			<corpusDir>resources/qa/corpusXML</corpusDir>
			
			<!-- training and test directories -->
			<!-- Direcotry from where the QCE class reads the train corpus -->
			<trainDir>resources/qa/classification/trainfc/</trainDir>
			
			<!-- Direcotry from where the QCE class reads the test corpus -->
			<testDir>resources/qa/classification/testfc/</testDir>
			
			<!-- Directory of the model generated by the classifier -->
			<modelsClassifierFile>resources/qa/classification/models/questionclassifier_en</modelsClassifierFile>
			<!-- ######################################### -->
													
			<!-- Do not change -->
			<namedEntitiesFile>resources/qa/classification/ne/entities</namedEntitiesFile>
						
			<!-- Check in Frames refactor -->
			<framesDir>resources/qa/frames</framesDir>
			
			<!-- Specific Config files for NLU techniques -->
			<SVMConfigFile>resources/qa/config/svmConfig.xml</SVMConfigFile>
			<CLMConfigFile>resources/qa/config/clmConfig.xml</CLMConfigFile>
			<DistanceConfigFile>resources/qa/config/distanceConfig.xml</DistanceConfigFile>
			<CrossEntropyConfigFile>resources/qa/config/crossEntropyConfig.xml</CrossEntropyConfigFile>
			<LSAConfigFile>resources/qa/config/lsaConfig.xml</LSAConfigFile>
			<IWConfigFile>resources/qa/config/iwConfig.xml</IWConfigFile>
			<VSMConfigFile>resources/qa/config/vsmConfig.xml</VSMConfigFile>
			<OODDistanceConfigFile>resources/qa/config/OODConfig.xml</OODDistanceConfigFile>
			<CronbachConfigFile>resources/qa/config/ratersConfig.xml</CronbachConfigFile>
					
			<!-- Check usage-->
			<!--accuracy minima para o classificador -->
			<minAccuracy>0.1</minAccuracy>
			
		</classification>
		<analysis>
			<!-- tokenizer type (PTB;LINGPIPE) -->
			<tokenizerType>PTB</tokenizerType>
			<!-- syntactic parser grammar -->
			<parserGrammarFile>resources/qa/parser/questionbank_modified.gr</parserGrammarFile>
			<!-- # Lexicon map -->
			<lexiconmapFile>resources/qa/classification/map/WordNetMap.xml</lexiconmapFile>
		</analysis>
	</interpretation>
	<nlp>
		<wordnet>
			<!-- configuration file (file_properties.xml;map_properties.xml;database_properties.xml) -->
			<properties>resources/qa/wordnet/file_properties.xml</properties>
		</wordnet>
	</nlp>
</config>

